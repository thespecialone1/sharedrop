{
  "name": "file-share-app",
  "version": "1.0.0",
  "description": "Share files instantly via secure Cloudflare tunnel",
  "type": "module",
  "main": "src/main/index.js",
  "scripts": {
    "start": "NODE_ENV=production electron .",
    "dev": "concurrently \"vite\" \"NODE_ENV=development wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "postinstall": "electron-rebuild --force",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.sharedrop.app",
    "productName": "SharedDrop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "main": "src/main/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thespecialone1/sharedrop.git"
  },
  "keywords": [
    "file-sharing",
    "electron",
    "cloudflare-tunnel"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^34.1.1",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.35",
    "socket.io-client": "^4.8.3",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.330.0",
    "plyr": "^3.8.4",
    "plyr-react": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.12.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.8.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  }
}