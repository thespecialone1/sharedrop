{
  "name": "file-share-app",
  "version": "1.3.0",
  "description": "ShareDrop - Instant Folder Sharing",
  "main": "frontend/electron/main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node tools/build-prebuild.js",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },
  "build": {
    "appId": "com.sharedrop.app",
    "productName": "ShareDrop",
    "files": [
      "frontend/**/*",
      "file-share-app",
      "file-share-app.exe",
      "sharedrop.db",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "frontend/assets/icons/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/assets/icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/assets/icons/icon.png",
      "category": "Utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {}
}