{
  "name": "file-share-app",
  "version": "1.1.0",
  "description": "**Share local folders instantly with password-protected links. No uploads, no cloud storage - files stay on your machine.**",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node build-prebuild.js",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },
  "build": {
    "appId": "com.sharedrop.app",
    "productName": "ShareDrop",
    "files": [
      "electron-main.js",
      "preload.js",
      "electron-ui.html"
    ],
    "extraResources": [
      "file-share-app"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "icon.icns",
      "x64ArchFiles": "Contents/Resources/file-share-app"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "icon.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "canvas": "^3.2.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  }
}
